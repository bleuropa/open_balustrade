{
  "permissions": {
    "deny": [
      "Read(./.env)",
      "Read(./.env.local)",
      "Read(./.env.production)",
      "Read(./.env.development)",
      "Read(./.env.test)",
      "Read(./**/*.log)",
      "Read(./**/*.dump)"
    ]
  },
  "hooks": {
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/pre-compaction.sh",
            "statusMessage": "Saving context before compaction..."
          }
        ]
      }
    ]
  }
}
