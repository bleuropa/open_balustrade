{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["AGENTS.md"],
  "default_agent": "build",
  "compaction": {
    "auto": true,
    "prune": true
  },
  "watcher": {
    "ignore": ["node_modules", ".git", "dist", "build", "_reference"]
  },
  "permission": {
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow",
      "**/*.log": "deny",
      "**/*.dump": "deny"
    },
    "bash": {
      "*": "allow",
      "git push --force*": "ask",
      "rm -rf *": "ask"
    }
  }
}
